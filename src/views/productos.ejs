<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>productos</title>
</head>
<body>
   
    <div>
        <ul>
            <% products.forEach(function(prod){ %>
                <li>
                    <img src=<%= prod.foto %> alt="">
                    <h2>
                        <%= prod.nombre %>
                    </h2>
                    <p>
                        <%= prod.description %>
                        <strong>
                            <%= prod.precio %>
                        </strong>
                    </p>    
                    <h3>
                        <%= prod.stock %>
                    </h3>
                    <form action="/api/cart/<%= cart_id %>/products/<%= prod.id %>" method="post">
                        <input type="number" name="amount" id="amount">
                        <button type="submit">agregar al carrito</button>
                    </form>
                    <!-- <a href="/api/cart/<%= cart_id %>/products/<%= prod.id %>">agregar al carrito</a> -->
                </li>
            <% }) %>
        </ul>
        <div>
            <a href="/api/cart/<%= cart_id %>/products">Terminar compra</a>
        </div>
    </div>
</body>
</html>